{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": [
      {
        "Name": "gateway.request",
        "Configs": {
          "cleanup.policy": "compact,delete"
        },
        "NumPartitions": 2
      },
      {
        "Name": "gateway.response",
        "Configs": {
          "cleanup.policy": "compact,delete"
        }
      }
    ]
  }
}
