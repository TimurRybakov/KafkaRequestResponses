{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Kafka": {
    "BootstrapServers": "localhost:9092",
    "Topics": [
      {
        "Name": "gateway.request",
        "Configs": {
          "cleanup.policy": "compact,delete"
        }
      },
      {
        "Name": "gateway.response",
        "Configs": {
          "cleanup.policy": "compact,delete"
        }
      }
    ]
  },
  "Aspire": {
    "Confluent": {
      "Kafka": {
        "Producer": {
          "Config": {
            "Acks": "All"
          }
        }
      }
    }
  }
}
